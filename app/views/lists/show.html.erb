<h2><%= @list.name %></h2>
<% @list.bookmarks.each do |bookmark| %>
  <%= bookmark.movie.title %>
  <%= bookmark.comment %>
  <%= link_to 'Delete bookmark', bookmark_path(bookmark.id), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
<% end %>

<%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>
